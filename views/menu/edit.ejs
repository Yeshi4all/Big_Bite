<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editing: <%= menus.name %></h1>
    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <a href="/add" class="btn btn-sm btn-outline-secondary">
                Add menu
            </a>
        </div>
    </div>
</div>

<div class="col py-3">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/index">Dashboard</a></li>
            <li class="breadcrumb-item active"><%= menus.name %></li>
          </ol>
        </nav>
      </div>
      <div class="col text-end fw-lighter">
        <b>Last Updated: <%= new Date(menus.updatedAt).toUTCString()  %></b>
      </div>
    </div>
</div>

<form action="/edit/<%= menus._id %>?_method=PUT" method="POST">
    <div class="row form-group mb-4">
        <div class="col">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= menus.name %>" placeholder="Name" required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
          <label for="description">Description</label>
          <input type="text" class="form-control" id="description" name="description" value="<%= menus.description %>" placeholder="Description" required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
          <label for="price">Price</label>
          <input type="number" class="form-control" id="price" name="price" value="<%= menus.price %>" placeholder="Price" required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
          <label for="category">Category</label>
          <input type="text" class="form-control" id="category" name="category" value="<%= menus.category %>" placeholder="Category" required>
        </div>
    </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Update Menu</button>
    
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Menu</button>
    </div>

</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <div class="modal-title">You are about to remove a record.</div>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>
            This will remove the Menu record of <b class="fw-bold"><%= menus.name %></b><br/>
            Are you sure?
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <form action="/edit/<%= menus._id %>?_method=DELETE" method="POST" class="position-relative">
            <button type="submit" class="btn btn-primary">Yes, Remove Menu</button>
          </form>
        </div>
      </div>
    </div>
  </div>